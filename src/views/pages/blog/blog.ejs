<%- include('../../layout/header.ejs'); %>

<div class="tt-breadcrumb">
	<div class="container">
		<ul>
			<li><a href="/">home</a></li>
			<li><a href="/blog">Blogs</a></li>
		</ul>
	</div>
</div>
<div id="tt-pageContent">
	<div class="container-indent-04">
		<div class="container">
			<div class="tt-block-title tt-sub-pages">
				<h1 class="tt-title">Blog Posts</h1>
				<div class="tt-description">Read our latest blog posts</div>
			</div>
			<div class="row">
				<% if (blogs.posts.length > 0) { %>
					<% blogs.posts.forEach(post => { %>
						<% const monthNames = ["Jan", "Feb", "March", "Apr", "May", "June", "July", "Aug", "Sep", "Oct", "Nov", "Dec"]; %>
						<div class="col-12 col-md-6 mb-5">
							<div class="tt-post">
								<div class="tt-post-img">
									<a href="/blog/<%= post.id %>"><img src="http://localhost:3000/blogpost/<%= post.thumbnail %>" alt=""></a>
								</div>
								<div class="tt-post-content">
									<div class="tt-meta">
										<div class="tt-time">
											<span><%= new Date(post.createdAt).getDate() %></span>
											<%= monthNames[new Date(post.createdAt).getMonth()] %>
										</div>
									</div>
									<h2 class="tt-title"><a href="/blog/<%= post.id %>"><%= post.title %></a></h2>
									<div class="tt-description"><%= post.description.slice(0, 80) %>...</div>
									<div class="tt-btn">
										<a href="/blog/<%= post.id %>" class="tt-link">read more</a>
									</div>
								</div>
							</div>
						</div>
					<% }); %>
				<% } else { %>
					<h1 class="col-12 text-center my-3">No Post Found</h1>
				<% } %>
			</div>
		</div>
	</div>
</div>

